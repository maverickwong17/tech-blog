<section class="container flex-row">
  <section class="card">
    <header>{{post.title}}</header>
    <div class="card-body">
      <h4>{{post.content}}</h4>
      <p>- {{post.user.username}}, {{format_date post.createdAt}}</p>
    </div>
  </section>
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>
<div class="login-card">
  <form class="form login-form">
    <div class="form-group">
      <label for="username-login">Add Comment</label>
      <input class="form-input" type="text" id="add" />
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>