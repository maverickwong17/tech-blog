<section class="container flex-row">
  <section class="card">
    <header>{{post.title}}</header>
    <div class="card-body">
      <h4>{{post.content}}</h4>
      <p>- {{post.user.username}}, {{format_date post.createdAt}}</p>
    </div>
  </section>
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>
<div class="login-card">
  <h2 class="page-title">Add Comment</h2>
  <form class="form comment-form">
      <div>
        <label for="post-content">Content</label>
        <input class="form-input" type="text" id="comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Post</button>
      </div>
  </form>
</div>

<script src="/js/comment.js"></script>