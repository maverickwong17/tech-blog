<section class="container flex-row">
  <section class="card">
    <header>{{post.title}}</header>
    <div class="card-body">
      <h4>{{post.content}}</h4>
      <p>{{post.user.username}}</p>
      <p>{{format_date post.createdAt}}</p>
    </div>
  </section>
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>